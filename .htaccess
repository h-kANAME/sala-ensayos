RewriteEngine On

# CORS es manejado dinámicamente por PHP
# No establecer headers CORS aquí para evitar conflictos

# Mostrar errores PHP (solo para desarrollo)
php_flag display_errors on
php_value error_reporting E_ALL

# Redireccionar APIs al directorio public/api (incluyendo OPTIONS)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ public/api/index.php [QSA,L]